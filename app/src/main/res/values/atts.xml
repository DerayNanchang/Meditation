<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="ViewMusicHomeItemStyleable">
        <attr name="bottomLineView" format="boolean" />
        <!--        <attr name="setIcon" format="integer" />-->
        <attr name="setTitle"/>
        <attr name="setQuantity" format="string" />
    </declare-styleable>

    <declare-styleable name="ItemPhotoView">
        <attr name="setTitle" />
        <attr name="showLine"  />
    </declare-styleable>

    <declare-styleable name="ItemTextView">
        <attr name="setTitle" />
        <attr name="setMessage" format="string" />
        <attr name="showLine" />
    </declare-styleable>
    <declare-styleable name="ForegroundImageView">
        <attr name="android:foreground"/>
    </declare-styleable>

    <declare-styleable name="CircleProgressBarView">
        <attr name="progress" format="float"/>
        <attr name="max" format="float"/>
        <attr name="radius" format="dimension"/>
        <attr name="rawRingColor" format="color"/>
        <attr name="processedRingColor" format="color"/>
        <attr name="playSignColor" format="color"/>
        <attr name="pauseSignColor" format="color"/>
        <attr name="ringWidth" format="dimension"/>
        <attr name="playSignHeight" format="dimension"/>
        <attr name="playSignSpacing" format="dimension"/>
        <attr name="pauseSignLength" format="dimension"/>
        <attr name="pauseSignWidth" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="WrapSwitchCompat">
        <attr name="setName" format="string"/>
        <attr name="setState" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RadarView">
        <!--圆圈和交叉线的颜色-->
        <attr name="circleColor" format="color" />
        <!--圆圈的数量-->
        <attr name="circleNum" format="integer" />
        <!--扫描的颜色 RadarView会对这个颜色做渐变透明处理-->
        <attr name="sweepColor" format="color" />
        <!--水滴的颜色-->
        <attr name="raindropColor" format="color" />
        <!--水滴的数量 这里表示的是水滴最多能同时出现的数量。因为水滴是随机产生的，数量是不确定的-->
        <attr name="raindropNum" format="integer" />
        <!--是否显示交叉线-->
        <attr name="showCross" format="boolean" />
        <!--是否显示水滴-->
        <attr name="showRaindrop" format="boolean" />
        <!--扫描的转速，表示几秒转一圈-->
        <attr name="speed" format="float" />
        <!--水滴显示和消失的速度-->
        <attr name="flicker" format="float" />
    </declare-styleable>

</resources>