<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/rl_bottom_dialog_add"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/tv_bottom_dialog_name"
        android:background="?attr/selectableItemBackground"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/ll_bottom_dialog_add_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/svg_music_me_add" />

        <TextView
            android:id="@+id/ll_bottom_dialog_add_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="12sp"
            android:layout_toRightOf="@id/ll_bottom_dialog_add_icon"
            android:text="创建新歌单"
            android:textColor="@color/black" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:layout_alignLeft="@id/ll_bottom_dialog_add_text"
            android:layout_alignParentBottom="true"
            android:background="@color/bottomLineColor" />
    </RelativeLayout>

</layout>

