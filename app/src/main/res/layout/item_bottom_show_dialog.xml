<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_bottom_dialog_name"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical"
            android:textSize="10sp"
            android:text="创建的歌单" />

        <RelativeLayout
            android:id="@+id/rl_bottom_dialog_add"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/tv_bottom_dialog_name"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/ll_bottom_dialog_add_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/svg_music_me_add" />

            <TextView
                android:id="@+id/ll_bottom_dialog_add_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ll_bottom_dialog_add_icon"
                android:text="创建新歌单"
                android:textColor="@color/lightBlack"
                android:textSize="12sp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignLeft="@id/ll_bottom_dialog_add_text"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/rl_bottm_dialog_management"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/rl_bottom_dialog_add"
            android:paddingLeft="15dp">

            <ImageView
                android:id="@+id/ll_bottom_dialog_management_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:src="@drawable/svg_music_me_management" />

            <TextView
                android:id="@+id/ll_bottom_dialog_management_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/ll_bottom_dialog_management_icon"
                android:text="歌单管理"
                android:textColor="@color/lightBlack"
                android:textSize="12sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_alignLeft="@id/ll_bottom_dialog_management_text"
                android:layout_alignParentBottom="true"
                android:background="@android:color/darker_gray" />

        </RelativeLayout>
    </RelativeLayout>
</layout>

