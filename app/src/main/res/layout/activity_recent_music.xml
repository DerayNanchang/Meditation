<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".module.music.children.me.children.recent.RecentMusicActivity">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tb_local_toolbar"
            style="@style/NoSpaceActionBarTheme"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/Toolbar.Menu"
            app:navigationIcon="@mipmap/back"
            app:title="最近播放">

            <TextView
                android:id="@+id/tv_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:text="清空"
                android:textSize="16sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:background="?attr/selectableItemBackgroundBorderless"
                />
        </android.support.v7.widget.Toolbar>

        <include android:id="@+id/include_fragment_singer" layout="@layout/fragment_single"/>

    </LinearLayout>
</layout>
